{
  "name": "${envName}",
  "description": "no need for desc",
  "version": "1.0.0",
  "author": "github.com/samsonbek",
  "containers":[
    {
      "hostname":"web-apache",
      "template":"abdysamat-apache@b986652a73f7446b7ea9a9ed4c8100e8ef3079f0",
      "peer-criteria":"free peers",
      "size":"TINY",
      "port-mapping":[
        {
          "protocol":"http",
          "domain":"${domainName}",
          "external-port":"80",
          "internal-port":"80"
        }
      ]
    }
  ],
  "skip-ssh-key": "abdisamat",
  "peer-criteria":[
    {
      "name": "free peers",
      "max-price": "0"
    }
  ],
  "configuration": {
    "arguments": [
      {
        "key": "htmlFileName",
        "value": "${filename}"
      },
      {
        "key": "htmlContent",
        "value": "test"
      }
    ],
    "source-url": "https://github.com/samsonbek/helloworld-bp/archive/master.zip",
    "ansible-playbook": "main.yaml",
    "groups": [
      {
        "name": "web-group",
        "hostnames": [ "web-apache" ]
      }
    ]
  },
  "user-variables":
  {
    "envName": {
      "description": "Enter environment name, must container only letters",
      "type": "string",
      "default": "HelloWWWorld",
      "validation": "[a-zA-Z]+"
    }
  }
}
